<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/primaryColor</item>
    <item name="colorPrimaryDark">@color/primaryDarkColor</item>
    <item name="colorAccent">@color/secondaryColor</item>

    <item name="android:popupTheme">@style/AppTheme.PopupTheme</item>
  </style>

  <style name="AppTheme.PopupTheme" parent="ThemeOverlay.AppCompat.Light">

  </style>

  <style name="FieldLabel">
    <item name="android:textColor">@color/primaryColor</item>
    <item name="android:textSize">18sp</item>
    <item name="android:paddingTop">24dp</item>
    <item name="android:paddingBottom">12dp</item>
  </style>

  <style name="outlined_button">
    <item name="android:textColor">@color/primaryColor</item>
    <item name="android:paddingStart">@dimen/outline_button_style_horizontal</item>
    <item name="android:paddingEnd">@dimen/outline_button_style_horizontal</item>

  </style>

  <style name="date_circle">
    <item name="android:layout_width">@dimen/date_circle_dimension</item>
    <item name="android:layout_height">@dimen/date_circle_dimension</item>
    <item name="android:layout_marginStart">@dimen/date_circle_margin_start</item>
    <item name="android:layout_marginTop">@dimen/date_circle_margin_top</item>
    <item name="android:textAlignment">center</item>
    <item name="android:textSize">@dimen/calendar_date_text_size</item>

  </style>

  <style name="full_screen_dialog" parent="Theme.AppCompat.Dialog">
    <item name="android:windowNoTitle">true</item>

    <!-- Set this to true if you want Full Screen without status bar -->
    <item name="android:windowFullscreen">false</item>
    <item name="android:windowIsFloating">false</item>

    <!-- Additionally if you want animations when dialog opening -->
    <!--<item name="android:windowEnterAnimation">@anim/slide_up</item>-->
    <!--<item name="android:windowExitAnimation">@anim/slide_down</item>-->
  </style>

</resources>
