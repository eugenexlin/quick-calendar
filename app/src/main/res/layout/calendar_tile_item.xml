<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/cl_tile_item"
    android:layout_width="@dimen/tile_icon_size"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/tile_margin"
    android:clickable="true"
    android:focusable="true"
    >

  <ImageView
      android:id="@+id/iv_calendar_tile_thumbnail"
      android:layout_width="@dimen/tile_icon_size"
      android:layout_height="@dimen/tile_icon_size"
      android:background="@color/tile_placeholder_background"
      android:contentDescription="@string/calendar_tile_thumbnail"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      />

    <TextView
        android:id="@+id/tv_calendar_tile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textColor="@color/tile_text_color"
        app:layout_constraintEnd_toEndOf="@+id/iv_calendar_tile_thumbnail"
        app:layout_constraintStart_toStartOf="@+id/iv_calendar_tile_thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/iv_calendar_tile_thumbnail"
        tools:text="My Calendar"/>

</android.support.constraint.ConstraintLayout>